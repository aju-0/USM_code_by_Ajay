  <!-- Sale & Revenue Start -->
  <div class="container-fluid pt-4 px-4">
      <div class="row g-4">
          <div class="col-sm-6 col-xl-3">
              <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                  <i class="fa fa-chart-line fa-3x text-primary"></i>
                  <div class="ms-3">
                      <p class="mb-2">User count</p>
                      <h6 class="mb-0"><%=userCount%></h6>
                  </div>
              </div>
          </div>
          <div class="col-sm-6 col-xl-3">
              <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                  <i class="fa fa-user-plus fa-3x text-primary"></i>
                  <div class="ms-3">
                      <p class="mb-2">Add user </p>
                      <a  class="btn btn-sm  btn-success" href="/admin/new-user">Add +</a>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <!-- Sale & Revenue End -->


 


  <!-- Recent Sales Start -->
  <div class="container-fluid pt-4 px-4">
      <div class="bg-secondary text-center rounded p-4">
          <div class="d-flex align-items-center justify-content-between mb-4">
              <h6 class="mb-0">User configuration</h6>
              
          </div>
          
          <div class="table-responsive">
              <form action="/" method="post">
              <table class="table text-start align-middle table-bordered table-hover mb-0">
                  <thead>
                      <tr class="text-white">
                          <th scope="col">Name</th>
                          <th scope="col">@Email</th>
                          <th scope="col">Mobile</th>
                          <th scope="col">Dp</th>
                          <th scope="col">Status</th>
                          <th scope="col">Actions</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% 
if(users.length > 0){
 for(let i=0;i<users.length;i++){
   %>
                      <tr>
                          <td><%= users[i].name %></td>
      <td><%= users[i].email %></td>
      <td><%= users[i].mobile %></td>
      <td> 
        
        <div class="position-relative">
            <img class="rounded-circle" src="/userImages/<%= users[i].image %>" alt="<%= users[i].image %>" style="width: 100px; height: 100px;">

        
        <!-- <img src="/userImages/<%= users[i].image %>" alt="<%= users[i].image %>" width="100px" height="100px"></td> -->
      <td><%
          if(users[i].is_varified == 0){
            %>
             <p>Not Verified <i class="fa fa-exclamation" style="color: rgb(255, 3, 3);"></i></p>
            <%
          } 
          else{
            %>
            <p>Verified <i class="fa fa-check" style="color: rgb(106, 255, 0);"></i></p> 

            <%
          }
           %></td>
                          <td>
                              <a  class="btn  btn-success" href="/admin/edit-user?id=<%= users[i]._id %>">Edit <i class="fa fa-edit"></i></a>
                              <a  class="btn  btn-primary" href="/admin/delete-user?id=<%= users[i]._id %>#">Delete <i class="fa fa-trash"></i></a>
                          </td>
                      </tr>
                      <%
 }
}
else{
%>
<tr>
  <td colspan="5">Users Not Found</td>
</tr>
<%
}
%>
                      
                      
                      
                  </tbody>
              </table>
              <!-- ------------Adding Pagination -------------- -->

  <div class="pagination-container">
    <br>
    <%
    for(let j=1; j <= totalPages; j++){
      %>
      <a href="?page=<%= j %>"><button type="button" class="btn btn-primary"><%= j%></button></a>
      <%
    } 
    %>
    
  </div>

  <!-- ------------------------------------------------------- -->

          </form>
          </div>
      </div>
  </div>
          
